{% extends 'base.html.twig' %}

{% block body %}
<h1>All Products</h1>

<table>
    <thead>
    <tr>
        <th>Nom du jeu</th>
        <th>Prix</th>
        <th>Platforme</th>
        <th>Éditeur</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.name }}</td>
            <td>{{ product.price }} €</td>
            <td>{{ product.platform }}</td>
            <td>{{ product.publisher }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    <a style="margin-left: 5%" href="{{ path('app_products_user') }}" class="btn btn-secondary">Voir mes produits</a>

{% endblock %}
