{% extends 'base.html.twig' %}
{% block body %}
        <h1>Liste des utilisateur</h1>

        <table>
            <thead>
            <tr>
                <th>Id utilisateur</th>
                <th>Nom d'utilisateur</th>
                <th>Roles</th>
                <th><a href="{{ path('app_register') }}" class="btn btn-primary">Ajouter un utilisateur</a></th>

            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</a>
                    </td>


                </tr>
            {% endfor %}
            </tbody>
        </table>

{% endblock %}


